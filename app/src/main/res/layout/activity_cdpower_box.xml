<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jmmed.cdpowerbox.CDpowerbox">

    <LinearLayout
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txt_init"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_gravity="center_horizontal"
            android:text="RegÃ­strate" />

        <EditText
            android:id="@+id/login_admin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            tools:layout_editor_absoluteX="276dp"
            tools:layout_editor_absoluteY="215dp" />

        <EditText
            android:id="@+id/pass_admin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPassword"
            tools:layout_editor_absoluteX="276dp"
            tools:layout_editor_absoluteY="300dp" />

        <Button
            android:id="@+id/btn_login"
            android:layout_width="206dp"
            android:layout_height="46dp"
            android:text="Registrate"
            tools:layout_editor_absoluteX="276dp"
            tools:layout_editor_absoluteY="402dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_signnin"
            android:text="Si ya estas registrado. INICIA SESION."/>

    </LinearLayout>
</RelativeLayout>